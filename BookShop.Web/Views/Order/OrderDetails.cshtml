@model OrderViewModel

<section class="h-100 gradient-custom">
    <div class="container-1 py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-lg-10 col-xl-8">
                <div class="card" style="border-radius: 10px;">
                    <div class="card-header px-4 py-5">
                        <h5 class="text-muted mb-0">Спасибо за заказ,
                            <span class="text-success">@Model.BuyerFirstName @Model.BuyerLastName</span>!
                        </h5>
                    </div>
                    <div class="card-body p-4">
                        <div class="d-flex justify-content-between align-items-center mb-4">
                            <p class="lead fw-normal mb-0 text-success">Принято</p>
                            <p class="small text-muted mb-0">Номер заказа : @Model.OrderId</p>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-2 text-center d-flex justify-content-center align-items-center">
                                <p class="text-muted mb-0">Название</p>
                            </div>
                            <div class="col-md-2 text-center d-flex justify-content-center align-items-center">
                                <p class="text-muted mb-0">Количество</p>
                            </div>
                            <div class="col-md-2 text-center d-flex justify-content-center align-items-center">
                                <p class="text-muted mb-0">Скидка</p>
                            </div>
                            <div class="col-md-2 text-center d-flex justify-content-center align-items-center">
                                <p class="text-muted mb-0">Полная цена</p>
                            </div>
                            <div class="col-md-2 text-center d-flex justify-content-center align-items-center">
                                <p class="text-muted mb-0">Цена со скидкой</p>
                            </div>
                        </div>

                        @foreach (var item in Model.Items)
                        {
                            <partial name="_OrderDetailsCardPartial" model="@item" />
                        }

                        <div class="d-flex justify-content-between pt-1">
                            <p class="fw-bold mb-0">Детали</p>
                            <p class="text-muted mb-0"><span class="fw-bold me-4">Итоговая цена:</span>
                                @Model.TotalPrice руб.
                            </p>
                        </div>
                        <div class="d-flex justify-content-between pt-2">
                            <p class="text-muted mb-0">Дата заказа : @Model.OrderDate</p>
                            <p class="text-muted mb-0"><span class="fw-bold me-2">Скидка</span>
                                @Model.TotalDiscount.ToString("N2")
                                руб.
                            </p>
                        </div>
                        <div class="d-flex justify-content-between ">
                            <p class="text-muted mb-0">Номер телефона : @Model.PhoneNumber</p>
                            <p class="text-muted mb-0"><span class="fw-bold me-2">Доставка: </span> @Model.DeliveryType


                            </p>
                        </div>

                        <div class="d-flex justify-content-between mb-3">
                            <p class="text-muted mb-0">Эл. почта : @Model.Email</p>
                            <p class="text-muted mb-0"><span class="fw-bold me-4">Delivery Charges</span> Free</p>
                        </div>
                    </div>
                    <div class="card-footer border-0 px-4 py-5"
                        style="background-color: #a8729a; border-bottom-left-radius: 10px; border-bottom-right-radius: 10px;">
                        <h5 class="d-flex align-items-center justify-content-end text-white text-uppercase mb-0">ИТОГО:
                            <span class="h2 mb-0 ms-2">@Model.TotalPrice</span>
                        </h5>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>