@model PaginationViewModel


<div class="esh-pager">
    <div class="container-fluid">
        <article class="esh-pager-wrapper row">
            <nav>
                @if(@Model.ActualPage != 0)
                {
                <div class="col-md-2 col-xs-12">
                    <a class="esh-pager-item-left esh-pager-item--navigable esh-pager-item @Model.Previous"
                        id="Previous" aria-label="Previous">
                        Предыдущая
                    </a>
                </div>
                }
                <div class="col-md-8 col-xs-12">
                    <span class="esh-pager-item">
                        @Model.ItemsPerPage из @Model.TotalItems товаров - Страница @(Model.ActualPage + 1) -
                        @Model.TotalPages
                    </span>
                </div>
                @if(@Model.IsNextPageHasItems)
                {
                <div class="col-md-2 col-xs-12">
                    <a class="esh-pager-item-right esh-pager-item--navigable esh-pager-item @Model.Next" id="Next"
                        aria-label="Next">
                        Следующая
                    </a>
                </div>
                }
            </nav>
        </article>
    </div>
</div>
