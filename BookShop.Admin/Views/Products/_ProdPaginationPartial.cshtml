@model PaginationViewModel


<div class="esh-pager">
    <div class="container-fluid">
        <article class="esh-pager-wrapper row">
            <nav>
                @if(@Model.ActualPage != 0)
                {
                <div class="col-md-2 col-xs-12">
                    <button id="prevPage" onclick="prevPage(document.getElementById('actualPage').textContent)" class="btn btn-primary"
                        aria-label="Previous">
                        Предыдущая
                    </button>
                </div>
                }
                <div class="col-md-8 col-xs-12">
                    <span class="esh-pager-item">
                        @Model.ItemsPerPage из @Model.TotalItems товаров - Страница <span id="actualPage"> @Model.ActualPage </span> -
                        @Model.TotalPages
                    </span>
                </div>
                @if(@Model.IsNextPageHasItems)
                {
                <div class="col-md-2 col-xs-12">
                    <button id="nextPage" onclick="nextPage(document.getElementById('actualPage').textContent)" class="btn btn-primary"
                        aria-label="Next">
                        Следующая
                    </button>
                </div>
                }
            </nav>
        </article>
    </div>
</div>
